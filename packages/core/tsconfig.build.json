{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/node",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/**"]
}